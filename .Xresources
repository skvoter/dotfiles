Xft.dpi: 120


! ----------------------------------
! urxvt Settings
! ----------------------------------

URxvt.font: xft:TerminessTTF Nerd Font:pixelsize=12:antialias=true,\
            xft:FontAwesome:Regular:pixelsize=10
URxvt.scrollBar: false
! URxvt.letterSpace: 1
! ----------------------------------
!
! urxvt transparent
! ----------------------------------

!URxvt*inheritPixmap: true
!URxvt*transparent: true
!! URxvt*shading: 0 to 99 darkens, 101 to 200 lightens
!URxvt*shading: 30


! special
*.foreground:   #c5c8c6
*.background:   #050607
*.cursorColor:  #c5c8c6

! black
*.color0:       #282a2e
*.color8:       #373b41

! red
*.color1:       #a54242
*.color9:       #cc6666

! green
*.color2:       #8c9440
*.color10:      #b5bd68

! yellow
*.color3:       #de935f
*.color11:      #f0c674

! blue
*.color4:       #5f819d
*.color12:      #81a2be

! magenta
*.color5:       #85678f
*.color13:      #b294bb

! cyan
*.color6:       #5e8d87
*.color14:      #8abeb7

! white
*.color7:       #707880
*.color15:      #c5c8c6


! ----------------------------------
! urxvt extentions
! ----------------------------------
URxvt.perl-ext-common: resize-font,keyboard-select

!! resize-font
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up

!! keyboard-select:
URxvt.keysym.M-Escape: perl:keyboard-select:activate
